<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hello_white">

    <TextView
        android:id="@+id/set_profile_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wide_margin"
        android:layout_marginTop="@dimen/wide_margin"
        android:layout_marginRight="@dimen/wide_margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/set_profile_text"
        android:textSize="@dimen/abc_text_size_large_material" />

    <EditText
        android:id="@+id/set_profile_gender_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wide_margin"
        android:layout_marginRight="@dimen/wide_margin"
        android:layout_marginTop="@dimen/wide_margin"
        android:hint="@string/set_profile_gender_hint"
        android:visibility="gone" />

    <EditText
        android:id="@+id/set_profile_birthday_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wide_margin"
        android:layout_marginRight="@dimen/wide_margin"
        android:layout_marginTop="@dimen/content_margin"
        android:hint="@string/set_profile_birthday_hint"
        android:visibility="gone" />

    <EditText
        android:id="@+id/set_profile_hometown_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wide_margin"
        android:layout_marginRight="@dimen/wide_margin"
        android:layout_marginTop="@dimen/content_margin"
        android:inputType="text"
        android:hint="@string/set_profile_hometown_hint"
        android:visibility="gone" />

    <Button
        android:id="@+id/set_profile_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wide_margin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bubble_orange"
        android:text="@string/set_profile_save_button"
        android:textColor="@color/hello_white" />

    <ProgressBar
        android:id="@+id/set_profile_progress_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wide_margin"
        android:layout_gravity="center_horizontal"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:visibility="gone" />

</LinearLayout>