<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dialog_faq_button"
        android:id="@+id/dialog_faq_scrollview" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/thin_padding">

                <TextView
                    android:id="@+id/faq_question0"
                    android:text="@string/settings_dialog_faq_question_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/faq_answer0"
                    android:text="@string/settings_dialog_faq_answer_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/thin_padding">

                <TextView
                    android:id="@+id/faq_question1"
                    android:text="@string/settings_dialog_faq_question_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/faq_answer1"
                    android:text="@string/settings_dialog_faq_answer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/thin_padding">

                <TextView
                    android:id="@+id/faq_question2"
                    android:text="@string/settings_dialog_faq_question_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/faq_answer2"
                    android:text="@string/settings_dialog_faq_answer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/thin_padding">

                <TextView
                    android:id="@+id/faq_question3"
                    android:text="@string/settings_dialog_faq_question_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/faq_answer3"
                    android:text="@string/settings_dialog_faq_answer_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/thin_padding">

                <TextView
                    android:id="@+id/faq_question4"
                    android:text="@string/settings_dialog_faq_question_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/faq_answer4"
                    android:text="@string/settings_dialog_faq_answer_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/dialog_faq_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_ok_button"
        android:textColor="@color/hello_white"
        android:background="@drawable/bubble_orange"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dialog_margin" />

</RelativeLayout>