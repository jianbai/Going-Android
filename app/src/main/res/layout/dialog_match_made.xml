<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/profile_height"
        android:orientation="vertical"
        android:padding="@dimen/chat_padding">

        <TextView
            android:id="@+id/userName0"
            android:text="Scott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_display_2_material" />

        <TextView
            android:id="@+id/userInfo0"
            android:text="23 // Toronto, Ontario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/profile_height"
        android:orientation="vertical"
        android:padding="@dimen/chat_padding">

        <TextView
            android:id="@+id/userName1"
            android:text="Scott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_display_2_material" />

        <TextView
            android:id="@+id/userInfo1"
            android:text="23 // Toronto, Ontario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/profile_height"
        android:orientation="vertical"
        android:padding="@dimen/chat_padding">

        <TextView
            android:id="@+id/userName2"
            android:text="Scott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_display_2_material" />

        <TextView
            android:id="@+id/userInfo2"
            android:text="23 // Toronto, Ontario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </LinearLayout>

    <Button
        android:id="@+id/dialog_hello_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/say_hello"
        android:background="@drawable/bubble_orange" />

</LinearLayout>