<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/abc_action_bar_default_padding_material"
    android:paddingBottom="@dimen/abc_action_bar_default_padding_material">

    <LinearLayout
        android:id="@+id/authorContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/group_chat_padding"
        android:paddingRight="@dimen/group_chat_padding" >

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_caption_material" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/group_chat_padding"
        android:paddingRight="@dimen/group_chat_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:background="@drawable/bubble" />

    </LinearLayout>

</LinearLayout>