<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light" >

        <!-- Action bar style -->
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>

    </style>
    
    <style name="CustomActionBarTheme" parent="Widget.AppCompat.ActionBar">

        <item name="android:background">@color/hello_orange</item>
        <item name="background">@color/hello_orange</item>

        <item name="android:titleTextStyle">@style/CustomActionBarTheme.TitleText</item>
        <item name="titleTextStyle">@style/CustomActionBarTheme.TitleText</item>

        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>

        <item name="android:gravity">center_vertical</item>

    </style>

    <style

        name="CustomActionBarTheme.TitleText"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/hello_white</item>

    </style>

    <dimen name="action_bar_height">48dp</dimen>

</resources>