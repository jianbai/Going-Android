<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >

        <!-- Action bar style -->
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>

    </style>
    
    <style name="CustomActionBarTheme" parent="Widget.AppCompat.ActionBar">

        <!-- Background color -->
        <item name="android:background">@color/hello_orange</item>
        <!-- Support library compatibility -->
        <item name="background">@color/hello_orange</item>

        <!-- Text style -->
        <item name="android:titleTextStyle">@style/CustomActionBarTheme.TitleText</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/CustomActionBarTheme.TitleText</item>

    </style>

    <style name="CustomActionBarTheme.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <!-- Text color -->
        <item name="android:textColor">@color/hello_white</item>

    </style>

</resources>